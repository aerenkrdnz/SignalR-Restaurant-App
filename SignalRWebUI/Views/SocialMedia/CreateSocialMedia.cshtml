@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="socialMediaTitle">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="socialMediaTitle">

                            </div>

                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="socialMediaIcon">İkon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="socialMediaIcon">

                            </div>

                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="socialMediaUrl">Link Giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="socialMediaUrl">

                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medya Hesabını Ekle</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

